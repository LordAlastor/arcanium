use Libraries.Game.Graphics.Drawable

class Player

    text name = "Player"
    integer HP = 500
    integer MP = 5
    public Drawable playerSprite

    action SetStatus(integer health, integer mana)
        HP = health
        MP = mana
    end

    action GetName returns text
        return name
    end

    action DrawPlayer()
        playerSprite:Load("Assets\Sprites\SkeletonWalk.png")
    end
end